<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dk.easv.ATForum.Posts.EditTopicActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_topic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="45dp">

        <EditText
            android:id="@+id/etEditTopicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Topic Name"
            android:inputType="text"
            android:hint="@string/topic_name"/>

        <EditText
            android:id="@+id/etEditTopicDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Description"
            android:inputType="text"
            android:hint="@string/description"/>
        <Button
            android:id="@+id/submitEditTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"/>

    </LinearLayout>

    <include layout="@layout/footer"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:layout_width="match_parent"/>

</RelativeLayout>