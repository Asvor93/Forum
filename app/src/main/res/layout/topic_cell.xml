<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">
    </TextView>
    <TextView
        android:id="@+id/tvTopicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAuthorName"
        android:layout_alignParentStart="true">
    </TextView>
    <TextView
        android:id="@+id/tvTopicDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTopicName"
        android:layout_alignParentStart="true">
    </TextView>

    <Button
        android:id="@+id/addFavoriteTopic"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/add_to_favorite" />

    <Button
        android:id="@+id/goToEditTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:layout_below="@+id/addFavoriteTopic"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>